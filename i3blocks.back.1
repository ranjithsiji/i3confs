# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

# Do make in bandwidth2 folder for this to work
[bandwidth]
label=D/U
command=~/.i3/i3blocks-contrib/bandwidth2/bandwidth2 -w 307200:30720 -c 512000:51200
interval=persist
markup=pango

##uptime##
[uptime]
label=
command=uptime -p
interval=10
color=#de3123

[capslock]
command=xset -q | grep Caps | sed -E 's/.*Caps Lock:[^a-z]+([a-z]+).*/Caps: \1/'
interval=10

[numlock]
command=xset -q | grep Caps | sed -E 's/.*Num Lock:[^a-z]+([a-z]+).*/Num: \1/'
interval=10

[volume]
label=♪
command=amixer get Master | grep -E -o '[0-9]{1,3}?%' | head -1
interval=once
signal=1

# Do this if this block doesn't work
# sudo apt install sysstat
[cpu]
label=CPU: 
command=/usr/libexec/i3blocks/cpu_usage
interval=1
min_width=CPU:100.00%

[ram]
label=RAM:
command=/usr/libexec/i3blocks/memory
interval=10

[battery]
label=⚡
command=/home/smweb/.i3/i3blocks-contrib/battery/battery
interval=10
markup=pango
#color=#00ff00

[time]
command=date '+%a %d %B %Y %r'
interval=5

